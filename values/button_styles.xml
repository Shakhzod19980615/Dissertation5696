<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Кнопка без бэкграунда, но с эффектами риппл или
        полупрозрачным бэкграундом на более ранних версиях. -->
    <style name="Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton" />

    <style name="DefaultButton" parent="Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="DefaultButton.Primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/Text.Medium.16</item>
        <item name="shapeAppearance">@style/PrimaryButton</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="DefaultButton.Secondary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/Text.Regular.16</item>
        <item name="shapeAppearance">@style/SecondaryButton</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="backgroundTint">?colorButtonSecondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Outlined" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?serviceStroke</item>
        <item name="shapeAppearance">@style/RoundedStroke</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ShadowLayoutStyle" parent="AppTheme" />

    <style name="ShadowLayoutStyle.Button">
        <item name="shadowAlphaPercent">12</item>
        <item name="shadowRadius">16dp</item>
        <item name="shadowTopOffset">8dp</item>
    </style>
</resources>