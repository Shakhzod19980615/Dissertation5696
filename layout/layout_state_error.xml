<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_load_state_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_warning" />

    <TextView
        android:id="@+id/error_load_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:textAppearance="@style/Text.Regular.16.SecondaryColor"
        tools:text="@string/state_error_message" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/error_load_state_btn"
        style="@style/DefaultButton.Secondary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/state_error_btn" />
</LinearLayout>